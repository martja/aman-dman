{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Timelines Config",
  "description": "Schema for arrival/departure timelines and ATC connection settings",
  "type": "object",
  "properties": {
    "timelines": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["airportIcao", "title", "runwaysLeft", "runwaysRight", "targetFixesLeft", "targetFixesRight"],
        "properties": {
          "airportIcao": {
            "type": "string",
            "pattern": "^[A-Z0-9]{4}$",
            "description": "ICAO code must be exactly 4 uppercase letters or digits"
          },
          "title": {
            "type": "string"
          },
          "runwaysLeft": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9]{2}[A-Z]?$",
              "description": "Runway designator (e.g., 01, 01L, 35R)"
            }
          },
          "runwaysRight": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9]{2}[A-Z]?$"
            }
          },
          "targetFixesLeft": {
            "type": "array",
            "items": { "type": "string" }
          },
          "targetFixesRight": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "connectionConfig": {
      "type": "object",
      "required": ["atcClient", "api"],
      "properties": {
        "atcClient": {
          "type": "object",
          "required": ["host", "port"],
          "properties": {
            "host": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          },
          "additionalProperties": false
        },
        "api": {
          "type": "object",
          "required": ["host"],
          "properties": {
            "host": { "type": "string", "format": "uri" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["timelines", "connectionConfig"],
  "additionalProperties": false
}